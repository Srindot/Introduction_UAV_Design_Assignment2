{
    "name": "UAV Assignment Q2",
    "privileged": true,
    "remoteUser": "rosusr",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".",
        "args": {
            "USERNAME": "rosusr",
            "ROS_DISTRO": "humble"
        }
    },

    "workspaceFolder": "/workspace",
    "workspaceMount": "type=bind,source=/home/stimp/academics/intro_uav/assignments/assignment2,target=/workspace",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-python.python",
                "esbenp.prettier-vscode",
                "eamodio.gitlens",
                "ms-iot.vscode-ros"
            ]
        }
    },

    "containerEnv": {
        "DISPLAY": "${localEnv:DISPLAY}",
        "PULSE_SERVER": "unix:/run/user/1000/pulse/native"
    },

    "runArgs": [
        "--net=host",
        "--privileged",
        "-e", "DISPLAY=${localEnv:DISPLAY}",
        "-e", "PULSE_SERVER=unix:/run/user/$(id -u)/pulse/native",
        "--volume=/tmp/.X11-unix:/tmp/.X11-unix",
        "--volume=/run/user/$(id -u)/pulse/native:/run/user/$(id -u)/pulse/native",
        "--volume=${localEnv:XAUTHORITY}:/root/.Xauthority:ro",
        "--device=/dev/snd",
        "--group-add=audio"
    ],

    "initializeCommand": "mkdir -p /run/user/1000 && chmod 700 /run/user/1000",
    "postCreateCommand": "/usr/local/bin/QGroundControl",
    "features": {},

    "mounts": [
        {
            "type": "bind",
            "source": "/home/stimp/.vscode",
            "target": "/home/rosusr/.vscode"
        }
    ]
}
